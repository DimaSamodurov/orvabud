<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(gallery_entry) -%>">
  <span class='preview'>
    <%= image_fu gallery_entry.image, "100x100" %>
  </span>
  <span class='title'>
    <%= gallery_entry.title %>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), gallery_entry_path(gallery_entry),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_gallery_entry_path(gallery_entry),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_gallery_entry_path(gallery_entry),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => gallery_entry.title),
        :method => :delete %>
  </span>
</li>
